<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="dh-condition-mcv-1"/>
  <url value="http://ns.electronichealth.net.au/fhir/StructureDefinition/dh-condition-mcv-1"/>
  <name value="DHConditionMCV"/>
  <title value="MHR Medical Conditions View Condition"/>
  <status value="draft"/>
  <publisher value="Australian Digital Health Agency"/>
  <contact>
    <telecom>
      <system value="email"/>
      <value value="help@digitalhealth.gov.au"/>
    </telecom>
  </contact>
  <description
    value="The purpose of this profile is to support a consolidated view of medical conditions and past medical history contained in a patient's My Health Record. It is based on the [AU Core Condition](https://build.fhir.org/ig/hl7au/au-fhir-core/StructureDefinition-au-core-condition.html) profile and describes the data structures and obligations to be met when conforming to this profile."/>
  <copyright
    value="Copyright Â© 2024 Australian Digital Health Agency - All rights reserved. This content is licensed under a Creative Commons Attribution 4.0 International License. See https://creativecommons.org/licenses/by/4.0/."/>
  <kind value="resource"/>
  <abstract value="false"/>
  <type value="Condition"/>
  <baseDefinition value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-condition"/>
  <derivation value="constraint"/>
  <differential>
    <element id="Condition.id">
      <path value="Condition.id"/>
      <min value="1"/>
    </element>
    <element id="Condition.clinicalStatus">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.clinicalStatus"/>
    </element>
    <element id="Condition.category">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.category"/>
    </element>
    <element id="Condition.code">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.code"/>
    </element>
    <element id="Condition.subject">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.subject"/>
      <type>
        <code value="Reference"/>
        <targetProfile
          value="http://ns.electronichealth.net.au/fhir/StructureDefinition/dh-patient-match-1"/>
      </type>
    </element>
    <element id="Condition.onset[x]">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.onset[x]"/>
      <short value="Estimated or actual date or date-time"/>
      <type>
        <code value="dateTime"/>
      </type>
    </element>
    <element id="Condition.abatement[x]">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.abatement[x]"/>
      <type>
        <code value="dateTime"/>
      </type>
    </element>
    <element id="Condition.recordedDate">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.recordedDate"/>
      <min value="1"/>
      <mustSupport value="true"/>
    </element>
    <element id="Condition.note">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
        <extension url="code">
          <valueCode value="SHALL:handle"/>
        </extension>
        <extension url="actor">
          <valueCanonical
            value="http://ns.electronichealth.net.au/fhir/ActorDefinition/mhr-gw-actor-requester"/>
        </extension>
      </extension>
      <path value="Condition.note"/>
      <max value="1"/>
    </element>
  </differential>
</StructureDefinition>
